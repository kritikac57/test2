<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Make a Donation</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .donation-card {
      max-width: 700px;
      margin: 0 auto;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .donation-header {
      background-color: #4e73df;
      color: white;
      padding: 20px;
      border-radius: 5px 5px 0 0;
      text-align: center;
    }
    .amount-btn {
      width: 100%;
      margin-bottom: 10px;
    }
    .amount-btn.active {
      background-color: #4e73df;
      border-color: #4e73df;
    }
    .custom-amount {
      display: none;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Support Our Food Donation Program</h1>
      <a href="/" class="btn btn-secondary">Back to Home</a>
    </div>
    
    <div class="card donation-card">
      <div class="donation-header">
        <h2>Make a Donation</h2>
        <p class="mb-0">Your contribution helps us provide food to those in need</p>
      </div>
      <div class="card-body p-4">
        <form action="/donate" method="POST">
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="name" class="form-label">Full Name</label>
              <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="col-md-6">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>
          </div>
          
          <div class="mb-4">
            <label for="phone_number" class="form-label">Phone Number</label>
            <input type="tel" class="form-control" id="phone_number" name="phone_number" required>
          </div>
          
          <h4 class="mb-3">Donation Amount</h4>
          <div class="row mb-3">
            <div class="col-6 col-md-3">
              <button type="button" class="btn btn-outline-primary amount-btn" data-amount="10">$10</button>
            </div>
            <div class="col-6 col-md-3">
              <button type="button" class="btn btn-outline-primary amount-btn" data-amount="25">$25</button>
            </div>
            <div class="col-6 col-md-3">
              <button type="button" class="btn btn-outline-primary amount-btn" data-amount="50">$50</button>
            </div>
            <div class="col-6 col-md-3">
              <button type="button" class="btn btn-outline-primary amount-btn" data-amount="100">$100</button>
            </div>
          </div>
          
          <div class="mb-4">
            <button type="button" class="btn btn-outline-secondary w-100" id="custom-amount-btn">Enter Custom Amount</button>
            <div class="mt-2 custom-amount" id="custom-amount-container">
              <label for="amount" class="form-label">Custom Amount ($)</label>
              <input type="number" class="form-control" id="amount" name="amount" min="1" step="0.01" required>
            </div>
          </div>
          
          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary btn-lg">Complete Donation</button>
          </div>
        </form>
      </div>
      <div class="card-footer text-center text-muted">
        <p class="mb-0">Thank you for your generosity!</p>
      </div>
    </div>
    
    <div class="text-center mt-4">
      <p>For any questions about donations, please contact us at <a href="mailto:support@fooddonation.org">support@fooddonation.org</a></p>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Handle donation amount selection
    const amountBtns = document.querySelectorAll('.amount-btn');
    const customAmountBtn = document.getElementById('custom-amount-btn');
    const customAmountContainer = document.getElementById('custom-amount-container');
    const amountInput = document.getElementById('amount');
    
    amountBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        // Remove active class from all buttons
        amountBtns.forEach(b => b.classList.remove('active'));
        
        // Add active class to clicked button
        this.classList.add('active');
        
        // Set the amount value
        const amount = this.getAttribute('data-amount');
        amountInput.value = amount;
        
        // Hide custom amount input
        customAmountContainer.style.display = 'none';
      });
    });
    
    customAmountBtn.addEventListener('click', function() {
      // Remove active class from all buttons
      amountBtns.forEach(btn => btn.classList.remove('active'));
      
      // Show custom amount input
      customAmountContainer.style.display = 'block';
      
      // Clear and focus the input
      amountInput.value = '';
      amountInput.focus();
    });
  </script>
</body>
</html>