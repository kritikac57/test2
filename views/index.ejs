<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Food Donation App</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <style>
    .order-card {
      margin-bottom: 20px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .food-item {
      border-bottom: 1px solid #eee;
      padding: 8px 0;
    }
    .food-item:last-child {
      border-bottom: none;
    }
    .expiry-warning {
      color: red;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Food Donations</h1>
      <a href="/add" class="btn btn-primary">Add New Donation</a>
    </div>
    
    <div class="donation-banner">
        <div class="row align-items-center">
          <div class="col-md-8">
            <h3>Support Our Mission</h3>
            <p class="mb-0">Your monetary donations help us expand our food donation program and reach more people in need.</p>
          </div>
          <div class="col-md-4 text-md-end mt-3 mt-md-0">
            <a href="/donate" class="btn btn-light">Donate Now</a>
            <a href="/donations" class="btn btn-outline-light ms-2">View All Donations</a>
          </div>
        </div>
      </div>
      
      
      
      <% if (orders && orders.length > 0) { %>
      <div class="row">
        <% orders.forEach(order => { %>
          <div class="col-md-6">
            <div class="card order-card">
              <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Order #<%= order.id %></h5>
              </div>
              <div class="card-body">
                <p><strong>Customer:</strong> <%= order.customer_name %></p>
                <p><strong>Address:</strong> <%= order.address %></p>
                <p><strong>Phone:</strong> <%= order.phone_number %></p>
                
                <h6 class="mt-3 mb-2">Food Items:</h6>
                <% if (order.food_items && order.food_items.length > 0) { %>
                  <div class="list-group">
                    <% order.food_items.forEach(item => { %>
                      <div class="food-item">
                        <div class="d-flex justify-content-between">
                          <span><%= item.item_name %></span>
                          <% 
                            const expiryDate = new Date(item.expiry_date);
                            const today = new Date();
                            const diffDays = Math.ceil((expiryDate - today) / (1000 * 60 * 60 * 24));
                          %>
                          <span class="<%= diffDays <= 3 ? 'expiry-warning' : '' %>">
                            Expires: <%= expiryDate.toLocaleDateString() %>
                            <% if (diffDays <= 3) { %>
                              (<%= diffDays <= 0 ? 'Expired' : `${diffDays} days left` %>)
                            <% } %>
                          </span>
                        </div>
                      </div>
                    <% }); %>
                  </div>
                <% } else { %>
                  <p class="text-muted">No food items listed</p>
                <% } %>
              </div>
              <div class="card-footer text-muted">
                Donated on: <%= new Date(order.created_at).toLocaleString() %>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <div class="alert alert-info">
        No food donations available. <a href="/add">Add your first donation</a>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>