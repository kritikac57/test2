<%- include ('sidebar.ejs')%>
  <div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Donation History</h1>
     
    </div>
    
    <div class="card donation-table">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">All Donations</h5>
      </div>
      <div class="card-body p-0">
        <% if (donations && donations.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Amount</th>
                  <th>Date</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <% donations.forEach(donation => { %>
                  <tr>
                    <td><%= donation.id %></td>
                    <td><%= donation.name %></td>
                    <td><%= donation.email %></td>
                    <td><%= donation.phone_number %></td>
                    <td class="donation-amount">$<%= parseFloat(donation.amount).toFixed(2) %></td>
                    <td><%= new Date(donation.created_at).toLocaleString() %></td>

                    <td><%= donation.status %></td>
                  </tr>
                <% }); %>
              </tbody>
              <tfoot>
                <tr class="table-primary">
                  <td colspan="4" class="text-end"><strong>Total Donations:</strong></td>
                  <td class="donation-amount">$<%= totalAmount.toFixed(2) %></td>
                  <td colspan="2"></td>
                </tr>
              </tfoot>
            </table>
          </div>
        <% } else { %>
          <div class="alert alert-info m-3">
            No donations have been made yet. <a href="/donate">Make the first donation</a>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>